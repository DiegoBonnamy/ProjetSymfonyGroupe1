{% extends 'base.html.twig' %}

{% block title %}Nouveau participant{% endblock %}

{% block body %}
    <div class="text-center symfony-form">
        <h1>Ajouter un nouveau participant</h1>

        {{ form_start(form) }}

        <!-- Formulaire -->
        <div class="row">
            <!-- Col Photo -->
            <div class="col-lg-4">
                <img src="https://source.unsplash.com/250x200/?people" style="margin-top:50px;"/>
            </div>

            <div class="col-lg-8">

                <label>Pseudo * : </label>
                {{ form_widget(form.pseudo) }} <br/>

                <label>Prénom * : </label>
                {{ form_widget(form.prenom) }} <br/>

                <label>Nom * : </label>
                {{ form_widget(form.nom) }} <br/>

                <!-- selecteur du site -->
                <label>Site * : </label><br/>
                <select class="form-select" name="_sites" id="sites">
                    {% for site in sites %}
                        <option value="{{ site.id }}">{{ site.nom }}</option>
                    {% endfor %}
                </select><br/>

                <label>Téléphone : </label>
                {{ form_widget(form.telephone) }} <br/>

                <label>Email * : </label>
                {{ form_widget(form.email) }} <br/>

                <label>Mot de passe * : </label>
                {{ form_widget(form.plainPassword) }} <br/>

                <label>Photo de profil : </label>
                {{ form_row(form.photo) }} <br/>

                <!-- Controles -->
                <button class="btn btn-success" style="border-radius:25px;">Enregistrer</button>
                <a href="{{ path('sortie_index') }}" class="btn btn-danger" style="border-radius:25px;">Annuler</a>
                <p class="mt-4">* Champs obligatoire</p>

            </div>
        </div>

        {{ form_end(form) }}

    </div>
{% endblock %}
