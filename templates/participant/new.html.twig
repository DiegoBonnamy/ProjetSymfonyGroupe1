{% extends 'base.html.twig' %}

{% block title %}New Participant{% endblock %}

{% block body %}
    <div class="text-center symfony-form">
        <h1>Mon profil</h1>

        {{ form_start(form) }}

        <!-- Formulaire -->
        <div class="row">
            <!-- Col Photo -->
            <div class="col-lg-4">
                <img src="https://source.unsplash.com/250x200/?people" style="margin-top:50px;" />
            </div>

            <div class="col-lg-8">

                <label>Pseudo : </label>
                {{ form_widget(form.pseudo) }} <br/>

                <label>Prénom : </label>
                {{ form_widget(form.prenom) }} <br/>

                <label>Nom : </label>
                {{ form_widget(form.nom) }} <br/>

                <label>Téléphone : </label>
                {{ form_widget(form.telephone) }} <br/>

                <label>Email : </label>
                {{ form_widget(form.email) }} <br/>

                <label>Mot de passe : </label>
                {{ form_widget(form.plainPassword) }} <br/>

                <!-- Controles -->
                <button class="btn btn-success" style="border-radius:25px;">Enregistrer</button>
                <button class="btn btn-danger" style="border-radius:25px;">Annuler</button>

            </div>
        </div>

        {{ form_end(form) }}

    </div>
{% endblock %}
